<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/top_title_style"></include>
    <ImageView
        android:visibility="gone"
        android:id="@+id/image_QRcode"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/layout_navbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cantact_us"/>
        <TextView
            android:id="@+id/cantact_us_txt"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/txt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/contact_us_one"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        android:layout_height="55dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/contact_copyright"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/labe_mine"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:text="@string/contact_copyRight"
            android:textColor="@color/label_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/i_arrow_list_pre" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_view" />
    <RelativeLayout
        android:id="@+id/contact_us_two"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/contact_disclaimer"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/labe_mine"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:text="@string/contact_Disclaimer"
            android:textColor="@color/label_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/i_arrow_list_pre" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_view" />
    <RelativeLayout
        android:id="@+id/contact_us_three"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/contact_copyright"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/contact_us_server_tell"
            style="@style/labe_mine"
            android:layout_marginLeft="26dp"
            android:layout_centerVertical="true"
            android:text="@string/contact_tell"
            android:textColor="@color/label_light" />
        <TextView
            android:layout_toRightOf="@+id/contact_us_server_tell"
            android:id="@+id/contact_us_tell"
            style="@style/labe_mine"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/label_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/i_arrow_list_pre" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_view" />
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_QRcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/label_light"
        android:textSize="15sp" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_address2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:textColor="@color/list_name_text"
        android:textSize="12sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/text_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_tel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:textColor="@color/list_name_text"
        android:textSize="12sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/text_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_internetURl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:textColor="@color/list_name_text"
        android:textSize="12sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/text_internetURl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/list_name_text"
        android:textSize="12sp" />

</LinearLayout>