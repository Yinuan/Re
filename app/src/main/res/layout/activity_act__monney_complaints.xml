<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_title_style"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:background="@color/btn_text"
        android:textColor="@color/txt_one"
        android:text="@string/monney_card_info"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/monney_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/campus_card_ID"
            android:textColor="@color/txt_two"
            android:gravity="center_vertical"
           android:textSize="16sp"
            android:paddingLeft="12dp"
           />
        <TextView
            android:id="@+id/campus_card_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:textSize="18sp"
            android:textColor="@color/txt_one"
            android:text="@string/monney_card_num"
         />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="17dp"
            android:background="@color/home_campus_card_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/monney_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/campus_card_name"
            android:textColor="@color/txt_two"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            />
        <TextView
            android:id="@+id/campus_card_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:textSize="18sp"
            android:textColor="@color/txt_one"
            android:text="@string/monney_card_name"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/btn_text">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <EditText
            android:id="@+id/monney_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_toRightOf="@+id/monney_card_monney"
            android:textColor="@color/txt_two"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:hint="请输入申诉金额"
            />
        <TextView
            android:id="@+id/monney_card_monney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:textSize="18sp"
            android:textColor="@color/txt_one"
            android:text="@string/monney_card_monney"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/btn_text">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/monney_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_imagepicker"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/btn_text">

    </View>
    <Button
        android:id="@+id/monney_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:background="@drawable/btn_yuyue"
        android:text="@string/submit"
        android:textColor="@color/btn_text"
        android:textSize="18sp"
        />

    <include layout="@layout/loading" />
</LinearLayout>
