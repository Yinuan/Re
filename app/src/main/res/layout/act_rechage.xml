			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dip">
	        <TextView
				android:id="@+id/edit_cardID"
		        android:paddingRight="10dip"
		        android:paddingLeft="80dip"	
