	            android:text="@string/rechage_user_name"
	            android:paddingLeft="15dip"
	            android:layout_alignBaseline="@+id/edit_user_name"/>
	    </RelativeLayout>-->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="55dp">
			<TextView
				android:id="@+id/edit_user_balance"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/campus_card_monney"
				android:textColor="@color/monney"
				android:gravity="center_vertical"
				android:textSize="16sp"
				android:paddingLeft="12dp"
				android:text="0.00"
				/>
			<TextView
				android:id="@+id/campus_card_monney"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="15dip"
				android:textSize="16sp"
				android:textColor="@color/label_light"
				android:text="@string/rechage_user_balance"
				/>

			<TextView
				android:id="@+id/rechange_monney_none"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/campus_card_monney_none"
				android:textColor="@color/monney"
				android:gravity="center_vertical"
				android:textSize="16sp"
				android:paddingLeft="12dp"
				android:text="0.00"
				/>
			<TextView
				android:layout_toRightOf="@+id/rechange_none"
				android:id="@+id/campus_card_monney_none"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="15dp"
				android:layout_marginLeft="15dp"
				android:textSize="16sp"
				android:layout_centerInParent="true"
				android:textColor="@color/label_light"
				android:text="@string/rechage_money_value_none"
				/>
			<TextView
				android:id="@+id/rechange_none"
				android:layout_width="32dp"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="15dp"
				android:layout_marginLeft="15dp"
				android:textSize="16sp"
				android:layout_centerInParent="true"
				android:textColor="@color/label_light"
				/>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignParentBottom="true"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="17dp"
				android:background="@color/home_campus_card_line"/>
		</RelativeLayout>
	   <!-- <RelativeLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView
				android:id="@+id/edit_user_balance"
		        android:paddingRight="10dip"
		        android:paddingLeft="80dip"	
		        android:enabled="false"
		        android:text="0"
		        style="@style/input_fullline"/>
	        <TextView style="@style/label" 
	            android:text="@string/rechage_user_balance"
	            android:paddingLeft="15dip"
	            android:layout_alignBaseline="@+id/edit_user_balance"/>
	    </RelativeLayout>-->
	    
	    <RelativeLayout
			android:visibility="gone"
            android:layout_width="match_parent"
	        android:layout_height="55dp"
	        android:background="@drawable/login_input_list_selected">
	        <TextView 
	            android:id="@+id/TextView_rechage_money"
	            style="@style/label" 
	            android:text="@string/rechage_money"
	            android:paddingLeft="15dip"
	            android:layout_alignBaseline="@+id/edit_money"/>
	        <TextView 
	            android:id="@+id/edit_money"
	            android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="@string/rechage_money_value"
	            android:textSize="14sp"
	            android:textColor="@color/hint"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/TextView_rechage_money"/>
	        
	        <ImageView
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
         		android:layout_alignParentRight="true"
         		android:layout_centerVertical="true"
         		android:layout_marginRight="15dp"
         		android:src="@drawable/home_arrow_down_selected"/>
	    </RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:background="@color/btn_text"
			android:layout_height="40dp">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:textColor="@color/label_light"
				android:textSize="15sp"
				android:paddingLeft="15dp"
				android:text="@string/rechang_monney_value_hint"/>
		</LinearLayout>
		<GridView
			android:layout_margin="15dp"
			android:id="@+id/gridview_rechange"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:overScrollMode="never"
			android:listSelector="@android:color/transparent"
			android:numColumns="3"
			android:horizontalSpacing="4dp"
			android:verticalSpacing="10dp"
			/>

		<View
			android:layout_width="match_parent"
			android:background="@color/btn_text"
			android:layout_height="6dp">

		</View>
	</LinearLayout>
    
    <Button
         android:id="@+id/button_bind_next"
         android:layout_below="@+id/layout_content"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_marginTop="50dip"
         android:layout_marginBottom="7dip"
         android:layout_marginLeft="18dip"
         android:layout_marginRight="18dip"
         android:background="@drawable/btn_yuyue"
         android:text="@string/submit_rechage"
         android:textColor="@color/btn_text"
         android:textSize="18sp" 
         />

</RelativeLayout>