<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
		android:visibility="gone"
		android:id="@+id/layout_navbar"
		style="@style/navbar" >
        <TextView style="@style/title"
			android:text="@string/campus_card_rechage" />
        <ImageView 
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
         	android:layout_height="match_parent"
         	android:layout_alignParentLeft="true"
         	android:paddingLeft="15dp"
         	android:paddingRight="15dp"
         	android:layout_centerVertical="true"
         	android:src="@drawable/login_return_button_selected"/>
    </RelativeLayout>
<include layout="@layout/top_title_style"></include>
    <LinearLayout android:id="@+id/layout_content"
        android:layout_below="@+id/top_menu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<View
			android:layout_width="match_parent"
			android:layout_height="6dp"
			android:background="@color/btn_text"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="55dp">
			<TextView
				android:id="@+id/edit_cardID"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/campus_card_ID"
				android:textColor="@color/txt_two"
				android:gravity="center_vertical"
				android:textSize="16sp"
				android:paddingLeft="12dp"
				android:text="099"
				/>
			<TextView
				android:id="@+id/campus_card_ID"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="15dip"
				android:textSize="16sp"
				android:textColor="@color/label_light"
				android:text="@string/rechage_cardID"
				/>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignParentBottom="true"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="17dp"
				android:background="@color/home_campus_card_line"/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="55dp">
			<TextView
				android:id="@+id/edit_user_name"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/campus_card_name"
				android:textColor="@color/txt_two"
				android:gravity="center_vertical"
				android:textSize="16sp"
				android:paddingLeft="12dp"
				android:text="099"
				/>
			<TextView
				android:id="@+id/campus_card_name"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="15dip"
				android:textSize="16sp"
				android:textColor="@color/label_light"
				android:text="@string/rechage_user_name"
				/>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignParentBottom="true"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="17dp"
				android:background="@color/home_campus_card_line"/>
		</RelativeLayout>
