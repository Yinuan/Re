<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/top_title_style"/>
    <include layout="@layout/b_weihu_building_detail" />
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/boss_weihu_building_detail_list_1"
        >

        <TextView
            style="@style/labe_mine"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="水箱吨数"
            android:textColor="@color/label_light" />

        <TextView
            android:id="@+id/weihu_building_detail_line1"
         android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/txt_two"
            android:textSize="17sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/boss_weihu_building_detail_list_2"
        >

        <TextView
            style="@style/labe_mine"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="实际用水量"
            android:textColor="@color/label_light" />

        <TextView
            android:layout_toLeftOf="@+id/weihu_building_detail_arrorw"
           android:id="@+id/weihu_building_detail_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:text="123"
            android:textColor="@color/txt_two"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/weihu_building_detail_arrorw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@mipmap/i_arrow_list_pre" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_view"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/boss_weihu_building_detail_list_3"
        >

        <TextView
            style="@style/labe_mine"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="水温"
            android:textColor="@color/label_light" />

        <TextView
            android:id="@+id/weihu_building_detail_line3"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/mine_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/txt_two"
            android:textSize="17sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/boss_weihu_building_detail_list_4"
        >

        <TextView
            style="@style/labe_mine"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="水位"
            android:textColor="@color/label_light" />

        <TextView
            android:id="@+id/weihu_building_detail_line4"
            android:layout_alignParentRight="true"
            android:text="10M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/txt_two"
            android:layout_marginRight="17dp"
            android:textSize="17sp" />


    </RelativeLayout>


</LinearLayout>  
